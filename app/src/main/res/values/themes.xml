<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickDiner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>
    <style name="Theme.QuickDiner.title">
        <item name="color">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.QuickDiner.subTitle">
        <item name="color">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.QuickDiner.textFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Theme.QuickDiner.textField">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.QuickDiner.dropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.QuickDiner.dropDownComponent">
        <item name="android:background">@color/white</item>
    </style>
</resources>